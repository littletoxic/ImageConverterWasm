@page "/not-found"
@page "/{*path}"
@layout MainLayout
@inject NavigationManager Nav

@code {
    [Parameter] public string? Path { get; set; }
}

<MudText Typo="Typo.h4" GutterBottom="true">404 - 页面未找到</MudText>
<MudText Typo="Typo.body1" Class="mb-4">抱歉，您访问的页面不存在。</MudText>
<MudButton Variant="Variant.Filled" Color="MudBlazor.Color.Primary"
           StartIcon="@Icons.Material.Filled.Home"
           OnClick="@(() => Nav.NavigateTo(Nav.BaseUri))">返回首页</MudButton>